@model List<FinderWebApp.Models.ViewModels.Events.MyEventsViewModel>
<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs">
        <div class="page-header d-flex align-items-center" style="background-image: url('');">
            <div class="container position-relative">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-6 text-center">
                        <h2>Etkinlikler</h2>
                    </div>
                </div>
            </div>
        </div>
        <nav>
            <div class="container">
                <ol>
                    <li><a href="index.html">Anasayfa</a></li>
                    <li>Etkinlikler</li>
                </ol>
            </div>
        </nav>
    </div>
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">

            <div class="row gy-4 posts-list mt-3">
                @foreach (var item in Model.OrderByDescending(x => x.CreatedDate))
                {
                    <div class="col-xl-4 col-md-6">
                        <a href="@Url.RouteUrl("ShowEventRoute",new{id = item.EventId})">
                            <article>
                                <div class="post-img">
                                    <img src="~/files/EventsImages/@item.EventImage" alt="" class="img-fluid">
                                </div>
                                <h2 class="title">
                                    <a href="#">@item.EventHeader</a>
                                </h2>
                                <div class="d-flex align-items-center">
                                    @* <img src="assets/img/blog/blog-author.jpg" alt="" class="img-fluid post-author-img flex-shrink-0"> *@
                                    <div class="post-meta">
                                        @* <p class="post-author-list">Maria Doe</p> *@
                                        <p class="post-date">
                                            @item.CreatedDate
                                        </p>
                                    </div>
                                </div>
                            </article>
                        </a>
                    </div>
                }
            </div>
@* 
            <div class="blog-pagination">
                <ul class="justify-content-center">
                    <li><a href="#">1</a></li>
                    <li class="active"><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                </ul>
            </div> *@

        </div>
    </section>

</main>